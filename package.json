{
  "name": "fda-510k-intelligence-suite",
  "version": "1.9.0",
  "description": "Professional-grade FDA 510(k) clearance data analysis tool built in Excel VBA with Power Query integration",
  "main": "assets/excel-workbooks/FDA_510k_Intelligence_Suite.xlsm",
  "scripts": {
    "build": "cd scripts/build && powershell -ExecutionPolicy Bypass -File build.ps1",
    "build:debug": "cd scripts/build && powershell -ExecutionPolicy Bypass -File build.ps1 -IncludeDebug",
    "deploy": "cd scripts/deploy && powershell -ExecutionPolicy Bypass -File deploy.ps1",
    "test": "echo \"Tests are run within Excel VBA environment\" && exit 0",
    "clean": "powershell -Command \"Remove-Item -Path dist -Recurse -Force -ErrorAction SilentlyContinue\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rzimmerman2022/FDA-510k-Intelligence-Suite.git"
  },
  "keywords": [
    "FDA",
    "510k",
    "medical-device",
    "regulatory",
    "compliance",
    "excel",
    "vba",
    "power-query",
    "data-analysis",
    "healthcare"
  ],
  "author": "Ryan Zimmerman",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/rzimmerman2022/FDA-510k-Intelligence-Suite/issues"
  },
  "homepage": "https://github.com/rzimmerman2022/FDA-510k-Intelligence-Suite#readme",
  "engines": {
    "excel": ">=2016",
    "windows": ">=10"
  },
  "requirements": {
    "excel": {
      "version": "2016+",
      "features": [
        "VBA",
        "Power Query",
        "Tables",
        "Macros"
      ]
    },
    "vba": {
      "references": [
        "Microsoft Scripting Runtime",
        "Microsoft Visual Basic for Applications Extensibility 5.3",
        "Microsoft XML, v6.0"
      ]
    },
    "api": {
      "openFDA": {
        "endpoint": "https://api.fda.gov/device/510k.json",
        "rateLimit": "240 requests per minute"
      },
      "openAI": {
        "optional": true,
        "purpose": "Company recap generation"
      }
    }
  },
  "directories": {
    "src": "src",
    "test": "tests",
    "doc": "docs",
    "config": "config",
    "assets": "assets",
    "scripts": "scripts"
  },
  "config": {
    "maintainer": "Ryan",
    "apiKeyPath": "%APPDATA%\\510k_Tool\\openai_key.txt",
    "defaultEnvironment": "production"
  }
}